<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp" >

    <TextView
        android:id="@+id/txtNotificationFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"
        android:text="@string/notif_freq"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTimeFreq"
        android:layout_toRightOf="@+id/editTimeFreq"
        android:entries="@array/time" />

    <Button
        android:id="@+id/butSaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTimeFreq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/save" />

    <EditText
        android:id="@+id/editTimeFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNotificationFreq"
        android:layout_below="@+id/txtNotificationFreq"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        android:lines="1"
        android:maxLength="2" >

        <requestFocus />
    </EditText>

</RelativeLayout>